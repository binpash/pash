# problems with * and null expansions dating back to bash's earliest days
A=(''); set -- ''

echo "<${A[*]:-X}>" "<${*:-X}>" "<${A:-X}>" "<${A[0]:-X}>" 

IFS=
A=('' ''); set -- '' ''
B=''

echo "<${A[*]:-X}>" "<${*:-X}>" "<${B:-X}>" "<${B[*]:-X}>"
