: ${TMPDIR:=/tmp}

HISTFILE=${TMPDIR}/history-$$
HISTSIZE=4
HISTIGNORE="history*"

set -o history

history -c

echo 1
echo 2
echo 3
echo 4
echo 5
echo 6

history

history -d -1
history

echo 6
echo 7

history
history -d -1
history

echo 7
echo 8
history -d -2--1
history

echo 9
echo 10
history
history -d 5-7
history

unset HISTFILE
exit 0
